#!/usr/bin/env bash

function proml
{
	case $TERM in
		xterm*)
			local TITLEBAR='\[\033]0;\u@\h:\w\007\]'
			;;
		*)
			local TITLEBAR=''
			;;
	esac
#    export PS1="${TITLEBAR}\W: "
    #export PS1="${TITLEBAR}\[\e[1m\]\W: \[\e[0m\]"
    #export PS1="${TITLEBAR}\[$(tput bold)\]\[\033[38;5;2m\]\W\[$(tput sgr0)\]\[\033[38;5;13m\]\$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/')\[$(tput sgr0)\]: \[$(tput sgr0)\]"
    export PS1="${TITLEBAR}\[$(tput bold)\]\[\033[38;5;39m\]\W\[$(tput sgr0)\]\[\033[38;5;93m\]\$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/')\[$(tput sgr0)\]: \[$(tput sgr0)\]"
}


